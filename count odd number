import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int count=0;
        for(int i=0;i<n;i++){
            if(s.nextInt()%2!=0)
            {
                count++;
            }
        }
        System.out.println(count);
    }
}
